# XDG Paths
export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache
export XDG_DATA_HOME=$HOME/.local/share
export XDG_DATA_DIRS=/usr/share:/usr/local/share:/var/lib/flatpak/exports/share:$XDG_DATA_HOME/flatpak/exports/share

# zsh config dir
export ZDOTDIR=$HOME/.config/zsh

# monitor order.
xrandr --output DP-2 --mode 1920x1080 --rate 144.00
xrandr --auto --output HDMI-0 --mode 1920x1080 --left-of DP-2

# Don't Randomly Turn off
xset s off
xset -dpms
xset s noblank

# Speedy keys
xset r rate 210 40

# Environment variables set everywhere
export EDITOR="nvim"
export TERMINAL="alacritty"
export BROWSER="firefox"

# For QT Themes
export QT_QPA_PLATFORMTHEME=qt5ct

# remap caps to escape
setxkbmap -option caps:escape


#setxkbmap -layout "us,ar" -option "grp:win_space_toggle"
setxkbmap -layout "us,ar" -option "grp:alt_shift_toggle"

export GTK_IM_MODULE=uim
export QT_IM_MODULE=uim
uim-xim &
export XMODIFIERS=@im=uim
#uim-toolbar-gtk3-systray &


# Load Xresources
xrdb ~/.Xresources
